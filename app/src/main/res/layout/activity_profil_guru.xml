<?xml version="0.1" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/foto_profil"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/userwarna"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chorry"
                android:gravity="center"
                android:padding="5dp"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/lihat_keahlian"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:src="@drawable/list_keahlian" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:text="Lihat Keahlian" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/lihat_jadwal"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:src="@drawable/lihat_jadwal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:text="Lihat Jadwal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/beri_review"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:src="@drawable/lihat_rating" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:text="Lihat Rating" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data Diri"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="8pt"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    />
                <TextView
                    android:id="@+id/nama_guru"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chorry Iga Setyaningrum"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_below="@id/ket"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.12"
                    android:background="@android:color/black"
                    android:layout_below="@id/nama_guru" />

                <TableLayout
                    android:id="@+id/usia"
                    android:layout_below="@id/nama_guru"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TableRow>
                        <TextView
                            android:id="@+id/usia_guru"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="21"
                            android:textStyle="bold"
                            android:paddingLeft="5dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="tahun"
                            android:textStyle="bold"
                            android:padding="5dp"/>
                    </TableRow>
                </TableLayout>

                <TextView
                    android:id="@+id/jenis_kelamin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/usia"
                    android:padding="5dp"
                    android:text="Perempuan"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.12"
                    android:background="@android:color/black"
                    android:layout_below="@id/usia" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.12"
                    android:background="@android:color/black"
                    android:layout_below="@id/jenis_kelamin" />

                <TextView
                    android:id="@+id/alamat_guru"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sidoarjo, Jawa Timur"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_below="@id/jenis_kelamin"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.12"
                    android:background="@android:color/black"
                    android:layout_below="@id/alamat_guru" />

                <TextView
                    android:id="@+id/pend_guru"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="D3 Teknik Informatika"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_below="@id/alamat_guru"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.12"
                    android:background="@android:color/black"
                    android:layout_below="@id/pend_guru" />

                <TextView
                    android:id="@+id/ipk_guru"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3,00"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_below="@id/pend_guru"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>