<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="9pt"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorPrimary"
            android:text="Masukkan Kriteria Keahlian Guru"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jenjang Murid"
            android:layout_margin="15dp"
            android:textSize="7pt"
            android:textColor="@color/colorPrimary"/>

        <Spinner
            android:id="@+id/jenjang_murid"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:backgroundTint="@color/colorPrimary"
            android:entries="@array/jenjang_murid"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mata Pelajaran"
            android:layout_margin="15dp"
            android:textSize="7pt"
            android:textColor="@color/colorPrimary"/>

        <Spinner
            android:id="@+id/matpel_murid"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:backgroundTint="@color/colorPrimary"
            android:entries="@array/matpel_murid"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hari Les"
            android:layout_margin="15dp"
            android:textSize="7pt"
            android:textColor="@color/colorPrimary"/>

        <Spinner
            android:id="@+id/hari_les"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:backgroundTint="@color/colorPrimary"
            android:entries="@array/hari_les"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin Guru"
            android:layout_margin="15dp"
            android:textSize="7pt"
            android:textColor="@color/colorPrimary"/>

        <Spinner
            android:id="@+id/jenis_kelamin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:backgroundTint="@color/colorPrimary"
            android:entries="@array/jenis_kelamin"
            android:layout_marginLeft="10dp" />


        <TextView
            android:id="@+id/selanjutnya1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SELANJUTNYA"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_margin="15dp"/>
    </LinearLayout>

</RelativeLayout>