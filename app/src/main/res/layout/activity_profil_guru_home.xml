<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.chorryigas.bismillahtugasakhir.ProfilGuruHome">

    <ImageView
        android:id="@+id/foto_guru"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop"
        android:src="@drawable/userwarna"
        />
    
    <TextView
        android:id="@+id/nama_guru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="Chorry Iga Setyaningrum"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/alamat_guru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="Sidoarjo, Jawa Timur"
        android:gravity="center"/>

    <TextView
        android:id="@+id/telp_guru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/jurusan_guru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/kampus_guru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:gravity="center"
        />
</LinearLayout>
